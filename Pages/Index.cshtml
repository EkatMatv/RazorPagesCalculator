@page
@model IndexModel

<div class="text-center">
    <h1>Калькулятор</h1>

    <form method="post">
        <div>
            <label>Первое число:</label>
            <input type="number" step="any" asp-for="FirstNumber" required>
        </div>

        <div>
            <label>Второе число:</label>
            <input type="number" step="any" asp-for="SecondNumber" required>
        </div>

        <div>
            <label>Операция:</label>
            <select asp-for="Operation">
                <option value="add">+ Сложение</option>
                <option value="subtract">- Вычитание</option>
                <option value="multiply">× Умножение</option>
                <option value="divide">÷ Деление</option>
            </select>
        </div>

        <button type="submit">Вычислить</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Result))
    {
            <div>
                <strong>Результат:</strong> @Model.Result
            </div>
    }
</div>